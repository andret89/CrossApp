<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossApp.App">
    <Application.Resources>
        <OnPlatform x:TypeArguments="x:String" x:Key="SolidFont">
            <On Platform="Android" Value="FA_Solid.otf#FA_Solid" />
            <On Platform="UWP" Value="/Assets/FA_Solid.otf#FA_Solid" />
            <On Platform="iOS" Value="Font Awesome 5 Free" />
        </OnPlatform>
        <OnPlatform x:TypeArguments="x:String" x:Key="NormalFont">
            <On Platform="Android" Value="FA_Regular.otf#FA_Regular" />
            <On Platform="UWP" Value="/Assets/FA_Regular.otf#FA_Regular" />
            <On Platform="iOS" Value="Font Awesome 5 Free" />
        </OnPlatform>
    </Application.Resources>
</Application>